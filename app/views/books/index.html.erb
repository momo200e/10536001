 <h1>書籍列表</h1>

  <%= link_to "新增書籍", new_book_path %>

  <table>
    <thead>
      <tr>
        <td>書名</td>
        <td>作者姓名</td>
        <td>簡介</td>
        <td>售價</td>
        <td>處理</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=link_to book.name , book_path(book)%></td>
        <td><%= book.author %></td>
        <td><%= book.introduction %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to "編輯", edit_book_path(book) %>
          <%= link_to "刪除",book,method: "delete" , data: { confirm: "確認刪除" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>